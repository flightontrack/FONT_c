<resources>
    <!-- LARGE FONT SIZE -->


    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">-->
    <style name="AppTheme" parent="android:Theme.Holo">
        <!--<item name="android:textSize">"@style/large_title_text</item>-->
        <item name="android:textSize">20sp</item>
        <!--<item name="android:alertDialogTheme"></item>-->
    </style>
    <style name="label_text" parent="AppTheme">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="label_text_small" parent="AppTheme">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="track_button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#1B1B1B</item>
        <!--<item name="android:shadowColor">#FF000000</item>-->
        <!--<item name="android:shadowDx">0</item>-->
        <!--<item name="android:shadowDy">-1</item>-->
        <!--<item name="android:shadowRadius">0.2</item>-->
        <item name="android:textSize">32dip</item>
        <item name="android:background">@drawable/bttn_status_red</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>
    <style name="track_button_small" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#1B1B1B</item>
        <!--<item name="android:shadowColor">#FF000000</item>-->
        <!--<item name="android:shadowDx">0</item>-->
        <!--<item name="android:shadowDy">-1</item>-->
        <!--<item name="android:shadowRadius">0.2</item>-->
        <item name="android:textSize">28dip</item>
        <item name="android:background">@drawable/bttn_status_red</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>
</resources>
